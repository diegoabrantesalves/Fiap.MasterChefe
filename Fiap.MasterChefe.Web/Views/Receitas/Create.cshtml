@model Fiap.MasterChefe.Aplicacao.ViewModels.ReceitaViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <h2>Novo</h2>

<h2 style="color:white">Criar</h2>

<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="color:white; margin-left:20px">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group" style="color:white; margin-left:20px">
                <label  asp-for="TempodePreparo" class="control-label"></label>
                <input asp-for="TempodePreparo" class="form-control" />
                <span asp-validation-for="TempodePreparo" class="text-danger"></span>
            </div>
            <div class="form-group" style="color:white; margin-left:20px">
                <label asp-for="Rendimento" class="control-label"></label>
                <input asp-for="Rendimento" class="form-control" />
                <span asp-validation-for="Rendimento" class="text-danger"></span>
            </div>
            <div class="form-group" style="color:white; margin-left:20px">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color:white">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
