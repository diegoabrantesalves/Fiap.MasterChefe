@model IEnumerable<Fiap.MasterChefe.Aplicacao.ViewModels.CategoriaReceitaViewModel>

@{
    ViewData["Title"] = "Index";
}

@*<h2 style="color:white;font-weight:200">Lista</h2>*@
<br />
<p>
    <a asp-action="Create" style="color:white">Criar nova categoria?</a>
</p>
<table class="table">
    <thead style="color:white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlImagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExibirTelaPrincipal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="color:white">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlImagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExibirTelaPrincipal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
